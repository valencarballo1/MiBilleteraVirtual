
@{
    ViewBag.Title = "Index";
}
<style>
  body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        .d-flex {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .d-flex div {
            max-width: 48%;
        }

        .d-flex h3 {
            margin-bottom: 10px;
        }

        .form-container {
            display: flex;
            justify-content: space-between;
        }

        .form-container .form-box {
            width: 48%;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
        }

        .form-container .form-box h3 {
            margin-bottom: 10px;
            text-align: center;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input[type="month"], input[type="number"] {
            width: calc(100% - 20px);
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            margin-bottom: 10px;
        }

        .btn-primary, .btn-submit {
            width: calc(100% - 20px);
            padding: 10px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007BFF;
            color: #fff;
            margin-right: 10px;
        }

        .btn-submit {
            background-color: #28a745;
            color: #fff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-submit:hover {
            background-color: #218838;
        }
    </style>


<div class="form-container">
    <div class="form-box">
        <h3>Ver mis gastos según periodo</h3>
        <div class="form-group">
            <label for="periodo">Seleccionar periodo:</label>
            <input type="month" id="periodo" name="periodo">
        </div>
        <button type="button" class="btn btn-primary" onclick="verSalario()">Ver Detalles</button>
    </div>

    <div class="form-box">
        <h3>Crear un periodo nuevo</h3>
        <form action="@Url.Action("Grabar", "Salario")" method="post">
            <div class="form-group">
                <label for="Period">Seleccionar periodo:</label>
                <input type="month" id="Period" name="Period">
            </div>
            <div class="form-group">
                <label for="amount">Monto:</label>
                <input type="number" id="amount" name="amount" step="0.01" required>
            </div>
            <button type="submit" class="btn-submit">Agregar Salario</button>
        </form>
    </div>
</div>

<script>
    function verSalario() {
        var periodo = $('#periodo').val();
        periodo = periodo.replace('-', '');
        console.log(periodo);

        // Enviar solicitud AJAX para obtener detalles del salario para el periodo seleccionado
        $.ajax({
            url: '@Url.Action("Get", "Salario")',
            type: 'GET',
            data: { periodo: periodo },
            success: function (data) {
                if (data.SalaryID > 0) {
                    swal("Se encontraron detalles para el periodo " + data.Period, {
                        icon: "success",
                    }).then(() => {
                        // Redireccionar al Home
                        console.log(data.SalaryID);
                        window.location.href = '/Home/Index?idSalario=' +  data.SalaryID;
                    });
                } else {
                    swal("Hubo un error en la carga", {
                        icon: "error",
                    }).then(() => {
                        // Redireccionar al Home
                        window.location.href = '@Url.Action("Index", "Gasto")';
                    });
                }
            },
            error: function (error) {
                console.error('Error al obtener detalles del salario:', error);
            }
        });
    }

    $('form').submit(function (event) {
        event.preventDefault();
        console.log($(this).serialize());

        $.ajax({
            url: '@Url.Action("Grabar", "Salario")',
            type: 'POST',
            dataType: 'json',
            data: $(this).serialize(),
            success: function (response) {
                if (response === "Ok") {
                    swal("El salario fue agregado correctamente", {
                        icon: "success",
                    }).then(() => {
                        // Redireccionar al Home
                        window.location.href = '/Salario/Index';
                    });
                } else {
                    swal("Hubo un error en la carga", {
                        icon: "error",
                    }).then(() => {
                        // Redireccionar al Home
                        window.location.href = '/Home/Index?idSalario=' + data.idSalario;
                    });
                }
            },
            error: function (jqXHR, textStatus, errorThrown) {
                swal("Hubo un error en la carga", {
                    icon: "error",
                });
            }
        });
    });
</script>

